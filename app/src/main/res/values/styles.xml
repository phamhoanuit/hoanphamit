<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/textColor</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:weekNumberColor">@color/red</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ScrollCalendarStyle">
        <item name="legendSeparatorStyle">@style/LegendSeparatorStyle</item>
        <item name="currentDayStyle">@style/CurrentDayStyle</item>
        <item name="selectedItemStyle">@style/SelectedItemStyle</item>
        <item name="selectedBeginningItemStyle">@drawable/scrollcalendar_range_start</item>
        <item name="selectedMiddleItemStyle">@style/SelectedItemMiddleStyle</item>
        <item name="selectedEndItemStyle">@style/SelectedItemEndStyle</item>
        <item name="legendItemStyle">@style/LegendItemStyle</item>
        <item name="monthTitleStyle">@style/MonthTitleStyle</item>
        <item name="unavailableItemStyle">@style/UnavailableItemStyle</item>
        <item name="android:disableDependentsState">@style/UnavailableItemStyle</item>
        <item name="dayStyle">@style/DayStyle</item>
    </style>

    <style name="DayStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LegendSeparatorStyle">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:height">1dp</item>
    </style>

    <style name="UnavailableItemStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <!--<item name="android:background">@drawable/scrollcalendar_strikethrough</item>-->
    </style>

    <style name="MonthTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CurrentDayStyle">
        <!--<item name="android:background">@drawable/scrollcalendar_circle_outline</item>-->
        <item name="android:textColor">@color/stroke_color</item>
    </style>

    <style name="SelectedItemStyle">
        <!--<item name="android:background">@drawable/custom_day_choose</item>-->
        <item name="android:textColor">@color/stroke_color</item>
    </style>

    <style name="SelectedItemMiddleStyle">
        <item name="android:background">@drawable/scrollcalendar_range_middle</item>
        <item name="android:textColor">@color/stroke_color</item>
    </style>

    <style name="LegendItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SelectedItemEndStyle">
        <item name="android:background">@drawable/scrollcalendar_range_end</item>
        <item name="android:textColor">@color/stroke_color</item>
    </style>

    <style name="SelectedItemBeginningStyle">
        <item name="android:background">@drawable/scrollcalendar_range_start</item>
        <item name="android:textColor">@color/stroke_color</item>
    </style>

</resources>